---
import Base from "../layouts/Base.astro";
import Gallery from "../components/Gallery.astro";
import VideoSlice from "../components/VideoSlice.astro";
---
<Base title="portfoliov1" description="projects">
  <!-- HERO -->
  <section class="relative min-h-[100svh] grid place-items-center px-6">
    <div class="text-center">
      <h1 class="text-5xl md:text-7xl font-bold tracking-tight">portfoliov1</h1>
      <p class="mt-4 text-neutral-300">------------------------</p>
      <a href="#work" class="inline-block mt-10 border border-neutral-700 rounded-full px-5 py-2
         hover:bg-neutral-800 transition"> check it ⌄</a>
    </div>
    <!-- Optional subtle background gradient -->
    <div class="pointer-events-none absolute inset-0 bg-[radial-gradient(1200px_600px_at_50%_-10%,rgba(255,255,255,.08),transparent)]"></div>
  </section>

  <!-- GALLERY -->
  <section id="work" class="px-4 md:px-8 lg:px-12 py-12">
    <h2 class="text-2xl md:text-3xl font-semibold mb-6">images</h2>
    <Gallery />
  </section>

  <!-- OPTIONAL VIDEO SLICE (background video that plays when visible) -->
  <section id="motion" class="py-20">
    <VideoSlice
      src="\Desktop\portfolio\src\assets\videos\[SPOTDOWNLOADER.COM] sea of cloud_2.mp4"
      poster=""
      caption="dis supposed to be a video"
    />
  </section>

  <footer class="px-4 md:px-8 lg:px-12 py-16 text-sm text-neutral-400">
    © {new Date().getFullYear()} wagwanenterprises <a class="underline" href="mailto:noahbowman1115@gmail.com">Contact</a>
  </footer>
</Base>

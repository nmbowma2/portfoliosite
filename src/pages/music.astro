---
import headerPng from "../assets/photos/fotosspecial-01.png";

// Default playlist (override with ?id=YOUR_PLAYLIST_ID if desired)
const playlistId ='0XKuugx3I0MaxZ8r2xUBbG'
  Astro.url.searchParams.get("id") ?? "0XKuugx3I0MaxZ8r2xUBbG";
const playlistSrc = `https://open.spotify.com/embed/playlist/${playlistId}?utm_source=generator&theme=0`;
const BASE = import.meta.env.BASE_URL;

---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>recent music</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Futura:wght@400&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href={`${BASE}vinyl.png`} type="image/png" sizes="any" />

  </head>
  <body>
    <div class="container">
      <!-- Return link -->
      <a href="javascript:history.back()" class="return-link">return</a>

      <!-- PNG image at top -->
      <div class="image-container">
        <img
          src={headerPng.src}
          width={headerPng.width}
          height={headerPng.height}
          alt="Music Header"
          class="header-image"
        />
      </div>

      <!-- Spotify playlist container -->
      <div class="spotify-container">
        <div id="playlist-container">
          <iframe
            title="Spotify playlist"
            style="border-radius:12px"
            src={playlistSrc}
            width="100%"
            height="600"
            frameborder="0"
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
          ></iframe>

          <p class="fallback">
            <a
              href={`https://open.spotify.com/playlist/${playlistId}`}
              target="_blank"
              rel="noreferrer noopener"
              >Spotify</a
            >
          </p>
        </div>
      </div>
    </div>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background-color: black;
        color: white;
        font-family: 'Futura', Arial, sans-serif;
        min-height: 100vh;
        overflow-x: hidden;
      }

      .container {
        width: 100%;
        min-height: 100vh;
        position: relative;
      }

      /* Return link - bezel removed */
      .return-link {
        position: fixed;
        top: 36px;
        left: 36px;
        color: red;
        font-size: 16px;
        text-decoration: none;
        z-index: 2000;
        transition: transform 0.2s ease;
        background: none;   /* no button background */
        border: none;       /* no button border */
        outline: none;      /* removes focus bezel */
      }
      .return-link:hover {
        transform: scale(1.05);
      }
      .return-link:focus {
        outline: none;      /* prevent focus halo */
      }

      .image-container {
        position: fixed;
        top: -17.5%;
        left: 25%;
        max-height: 200%;
        transform: translateX(-50%);
        transform: scale(1.5);
        z-index: 999;
        pointer-events: none;
      }

      .header-image {
        max-width: 50vw;
        height: auto;
        display: block;
      }

      .spotify-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
        padding: 20px;
        padding-top: 230px; /* Adjust based on your image height */
      }

      #playlist-container {
        width: 100%;
        max-width: 800px;
        text-align: center;
      }

      .fallback {
        margin-top: 12px;
        color: #fff;
        font-size: 14px;
      }

      .fallback a {
        color: #1db954;
        text-decoration: none;
      }
      .fallback a:hover {
        text-decoration: underline;
      }

      @media (max-width: 768px) {
        .return-link {
          font-size: 14px;
        }
        
        .image-container {
          top: 2.5%;
          left: 25%;
          transform: scale(2.25);
        }
        .spotify-container {
          padding-top: 150px;
        }
      }
    </style>
  </body>
</html>
